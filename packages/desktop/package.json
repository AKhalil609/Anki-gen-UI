{
  "name": "anki-one-desktop",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "electron/dist/main.js",
  "description": "Build Anki decks from CSV with TTS and image fetching.",
  "author": "https://github.com/AKhalil609",
  "scripts": {
    "icons": "node scripts/make-icons.mjs",
    "dev": "concurrently -k -n VITE,TS,ELEC -c auto \"vite --port 5175\" \"tsc -p electron/tsconfig.json -w\" \"wait-on tcp:5175 && nodemon -q -e js -w electron/dist --signal SIGINT --delay 300ms --exec 'electron electron/dist/main.js --enable-logging=stderr'\"",
    "start": "electron electron/dist/main.js",
    "build": "vite build && tsc -p electron/tsconfig.json && node scripts/embed-core.mjs",
    "dist:mac": "pnpm build && electron-builder --mac dmg",
    "dist:win": "pnpm build && pnpm icons && electron-builder --win nsis",
    "dist:linux": "pnpm build && pnpm icons && electron-builder --linux AppImage"
  },
  "build": {
    "appId": "com.ankione.app",
    "productName": "Anki One",
    "artifactName": "Anki-One-${version}-${os}-${arch}.${ext}",
    "files": [
      "dist/**",
      "electron/dist/**",
      "node_modules/**",
      "package.json",
      "!**/*.map",
      "!**/*.ts"
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.wasm"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.education",
      "hardenedRuntime": true,
      "icon": "build/logo.icns"
    },
    "dmg": {
      "icon": "build/logo.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/logo.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Education",
      "icon": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "AKhalil609",
        "repo": "Anki-gen-UI"
      }
    ]
  },
  "dependencies": {
    "@anki-one/core": "workspace:*",
    "@material/web": "^2.4.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "anki-apkg-export": "4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "csv-parse": "^5.5.6",
    "edge-tts-universal": "^1.3.1",
    "electron-is-dev": "^3.0.1",
    "file-type": "^21.0.0",
    "g-i-s": "^2.1.7",
    "lucide-react": "^0.544.0",
    "p-limit": "^6.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sonner": "^2.0.7",
    "sql.js": "1.9.0",
    "tailwind-merge": "^3.3.1",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^31.0.0",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3",
    "nodemon": "^3.1.10",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.5.6",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.13",
    "tailwindcss-animate": "^1.0.7",
    "to-ico": "^1.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "wait-on": "^9.0.0"
  }
}
