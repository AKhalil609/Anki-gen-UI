{
  "name": "anki-one",
  "version": "0.1.0",
  "description": "CSV â†’ Anki deck generator with TTS and images (desktop).",
  "main": "electron/dist/main.js",
  "author": "AKhalil609",
  "private": true,
  "packageManager": "pnpm@8.6.0",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently -k -n VITE,CORE,ELEC,NODE -c auto \"vite --port 5175\" \"tsc -p core/tsconfig.json -w\" \"tsc -p electron/tsconfig.json -w\" \"wait-on tcp:5175 && wait-on ./core/dist/index.js && nodemon -q -e js -w electron/dist --signal SIGINT --delay 300ms --exec 'electron electron/dist/main.js --enable-logging=stderr'\"",
    "dev:elec": "wait-on tcp:5175 && wait-on ./core/dist/index.js && nodemon -q -e js -w electron/dist --signal SIGINT --delay 300ms --exec \"electron electron/dist/main.js --enable-logging=stderr\"",
    "build": "rimraf renderer electron/dist && vite build && tsc -p core/tsconfig.json && tsc -p electron/tsconfig.json",
    "start": "electron electron/dist/main.js --prod",
    "dist:mac": "pnpm build && electron-builder --mac zip",
    "dist:win": "pnpm build && electron-builder --win nsis",
    "dist:linux": "pnpm build && electron-builder --linux AppImage",
    "type-check": "tsc -b",
    "lint": "eslint ."
  },
  "dependencies": {
    "anki-apkg-export": "4.0.3",
    "csv-parse": "^5.5.6",
    "edge-tts": "^1.0.1",
    "edge-tts-universal": "^1.3.2",
    "file-type": "^21.0.0",
    "g-i-s": "^2.1.7",
    "p-limit": "^6.1.0",
    "sql.js": "1.9.0",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.15",
    "@types/node": "^22.7.4",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "daisyui": "^5.1.13",
    "electron": "^31.0.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.13",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vite-tsconfig-paths": "^5.1.4",
    "wait-on": "^9.0.0"
  },
  "build": {
    "electronLanguages": [
      "en",
      "de"
    ],
    "compression": "normal",
    "appId": "com.ankione.app",
    "productName": "Anki One",
    "asar": true,
    "asarUnpack": [
      "**/*.wasm"
    ],
    "mac": {
      "target": [
        "zip"
      ],
      "category": "public.app-category.education",
      "hardenedRuntime": true,
      "identity": null,
      "icon": "src/build/logo.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/build/logo.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Education",
      "icon": "src/build"
    },
    "files": [
      "renderer/**",
      "electron/dist/**",
      "core/dist/**",
      "core/package.json",
      "package.json",
      "!**/*.map",
      "!**/*.ts"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "AKhalil609",
        "repo": "Anki-gen-UI"
      }
    ]
  }
}
